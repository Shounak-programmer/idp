{
    "name": "functions",
    "description": "Cloud Functions for Firebase",
    "scripts": {
        "serve": "npx firebase-tools emulators:start --only functions,firestore,auth,hosting",
        "shell": "npx firebase-tools functions:shell",
        "start": "npm run shell",
        "deploy": "npx firebase-tools deploy --only functions",
        "logs": "npx firebase-tools functions:log"
    },
    "engines": {
        "node": "18"
    },
    "main": "functions/index.js",
    "dependencies": {
        "axios": "^1.6.7",
        "firebase-admin": "^11.8.0",
        "firebase-functions": "^4.3.1"
    },
    "devDependencies": {
        "firebase-functions-test": "^3.1.0"
    },
    "private": true
}